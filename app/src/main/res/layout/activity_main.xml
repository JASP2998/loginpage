<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lpage.MainActivity">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="#B19797" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="30sp"
        style="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:padding="10sp"
        android:maxLines="1"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:hint="Name"
        android:textStyle="bold"
        android:textColor="#F8080809"
        android:textColorHint="#EDF5F5"
        android:textSize="25sp"
        android:id="@+id/login_username"
        android:inputType="text"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:maxLines="1"
        android:hint="Email"
        android:textStyle="bold"
        android:textColor="#F8080809"
        android:textColorHint="#EDF5F5"
        android:textSize="25sp"
        android:layout_below="@id/login_username"
        android:id="@+id/login_email"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:maxLines="1"
        android:hint="Contact"
        android:textStyle="bold"
        android:textColor="#F8080809"
        android:textColorHint="#EDF5F5"
        android:textSize="25sp"
        android:layout_below="@id/login_email"
        android:id="@+id/login_contact"
        android:inputType="textPhonetic"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:maxLines="1"
        android:hint="Password"
        android:textStyle="bold"
        android:textColor="#F8080809"
        android:textColorHint="#EDF5F5"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:layout_below="@id/login_contact"
        android:id="@+id/login_pass"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:maxLines="1"
        android:hint="Confirm Password"
        android:textStyle="bold"
        android:textColor="#F8080809"
        android:textColorHint="#EDF5F5"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:layout_below="@id/login_pass"
        android:id="@+id/login_cpass"
        />


    <RadioGroup
        android:id="@+id/login_radio"
        android:layout_below="@id/login_cpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_margin="15sp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Type"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor"
            android:layout_marginLeft="15sp"
            android:textSize="20sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:layout_marginLeft="15sp"
            android:textSize="20sp"/>




    </RadioGroup>
    <Button
        android:layout_below="@id/login_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:id="@+id/login_signup"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        android:textSize="25sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="@drawable/button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sign In"
        android:layout_below="@id/login_signup"
        android:padding="15sp"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:clickable="true"
        android:textStyle="bold"
        android:background="@drawable/button"/>

</RelativeLayout>
