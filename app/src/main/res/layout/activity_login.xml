<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="#F9FCFC" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35sp"
            android:gravity="center"
            android:text="Sign In"
            android:textSize="50sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="160sp"
            android:layout_marginEnd="20sp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint="Email"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10sp"
            android:textColor="#F8080809"
            android:textColorHint="#EDF5F5"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_email"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:hint="Password"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10sp"
            android:textColor="#F8080809"
            android:textColorHint="#EDF5F5"
            android:textSize="25sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/login_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pass"
            android:layout_margin="15sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="Remember Me"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/divider_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/login_check"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:text="Forget Password"
            android:textSize="25sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/login_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button"
            android:clickable="true"
            android:padding="15sp"
            android:text="Log In"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_log"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button"
            android:clickable="true"
            android:padding="15sp"
            android:text="Create new Account"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
